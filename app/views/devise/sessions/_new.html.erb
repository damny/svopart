<%- if controller_name != 'sessions' && 
       controller_name != 'registrations' && 
       controller_name != 'passwords' && 
       controller_name != 'confirmations' %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <p><%= f.label :username, 'логин:' %>
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "регистрация", new_registration_path(resource_name), :id => "registrn" %><br />
    <% end -%>
    <%= f.text_field :username, :class => "input_line" %>
  </p>

  <p><%= f.label :password, 'пароль:' %><br />
  <%= f.password_field :password, :class => "input_line" %></p>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me, 'запомнить' %>
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
      <%= link_to "забыли пароль?", new_password_path(resource_name), :id => "forgot_pass" %><br />
    <% end -%>
    </p>
  <% end -%>

  <p style="text-align:center;"><%= f.submit '', :class => "button shadow" %></p>
<% end %>

<% end -%>
