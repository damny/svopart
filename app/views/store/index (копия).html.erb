<% if notice %>
        <p id="notice" ><%= notice %></p>
<% end %>
<div class = "spec_offer" style = "height:400px;">
  <div id="spec_offer_title">
  <p>специальное предложение</p>
  </div>
  
  <ul class = "first">
    <% @products1.each_with_index do |product, i| %>
      <li
        <% if i==1 %>
          class = "center_f"
        <% end %>
      >
        <p><b><%= product.title %></b></p>
        <%= image_tag product.image.url(:medium) %>
        
        <%= button_to '', line_items_path(:product_id => product), :remote => true, :class => "add_to_cart shadow" %>
        <%= number_to_currency(product.price, :precision => 0) %>
      </li>
    <% end %>
  </ul>
  <div class = "clear border"></div>
  <ul class = "second">
    <% @products2.each_with_index do |product, i| %>
      <li<% if i==4 %>
          class = "fiveth"
        <% end %>
      >      
        <p><b><%= product.model %></b></p>
        <%= image_tag product.image.url(:thumb) %>
        <%= button_to '', line_items_path(:product_id => product), :remote => true, :class => "add_to_cart shadow" %>
        <%= number_to_currency(product.price, :precision => 0) %>
      </li>
    <% end %>
  </ul>
</div>

