  <tr>
    <%= form_for(order, :html => { :multipart => true }) do |f| %>
      <td class="field">
        <br />
        <%= order.order_num %>
      </td>
      <td class="field">
        <br />
        <%= order.email %>
      </td>
      <td class="field">
        <br />
        <%= f.text_field :name, :size => 15 %>
      </td>
      <td class="field">
        <br />
        <%= f.text_field :address, :size => 15 %>
      </td>
